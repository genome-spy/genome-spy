{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@genome-spy/core": [
        "packages/core/src"
      ],
      "@genome-spy/core/*": [
        "packages/core/src/*"
      ],
      "@genome-spy/core/schema.json": [
        "packages/core/dist/schema.json"
      ]
    },
    "resolveJsonModule": true,
    "module": "nodenext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "esnext",
    "strict": false,
    "noImplicitAny": true,
    "types": []
  }
}
