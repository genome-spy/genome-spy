{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@genome-spy/app": ["packages/app/src"],
      "@genome-spy/app/*": ["packages/app/src/*"],
      "@genome-spy/app/schema.json": ["packages/app/dist/schema.json"],
      "@genome-spy/core": ["packages/core/src"],
      "@genome-spy/core/*": ["packages/core/src/*"],
      "@genome-spy/core/schema.json": ["packages/core/dist/schema.json"]
    },
    "resolveJsonModule": true,
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": false,
    "noImplicitAny": true,
    "types": [],
    "skipLibCheck": false
  },
  "include": [
    "packages/*/src",
    "packages/core/dist/schema.json",
    "packages/app/dist/schema.json"
  ],
  "exclude": ["packages/*/dist", "packages/*/build", "packages/*/lib"]
}
