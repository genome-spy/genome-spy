{
  "$schema": "https://unpkg.com/@genome-spy/core/dist/schema.json",

  "description": "A three-stage semantic zoom using the multiscale composition operator.",
  "view": { "stroke": "lightgray" },
  "height": 120,

  "resolve": { "scale": { "x": "shared" } },

  "stops": [1, 0.1],

  "multiscale": [
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "text",
        "text": "Zoom in to see details",
        "size": 16
      },
      "encoding": {
        "x": { "value": 0.5 },
        "y": { "value": 0.5 },
        "color": { "value": "#666666" }
      }
    },
    {
      "data": {
        "sequence": { "start": 0, "stop": 4000, "step": 16, "as": "x" }
      },
      "transform": [
        {
          "type": "formula",
          "expr": "sin(datum.x / 40)",
          "as": "y"
        },
        {
          "type": "formula",
          "expr": "datum.x + 16",
          "as": "x2"
        }
      ],
      "mark": {
        "type": "rect",
        "tooltip": null
      },
      "encoding": {
        "x2": { "field": "x2" },
        "color": { "value": "#9ecae1" }
      }
    },
    {
      "data": {
        "sequence": { "start": 0, "stop": 4000, "step": 1, "as": "x" }
      },
      "transform": [
        {
          "type": "formula",
          "expr": "sin(datum.x / 40) + (random() - 0.5) * 0.2",
          "as": "y"
        }
      ],
      "mark": {
        "type": "point",
        "size": 35
      },
      "encoding": {
        "color": { "value": "#08519c" },
        "opacity": { "value": 0.7 }
      }
    }
  ],

  "encoding": {
    "x": {
      "field": "x",
      "type": "quantitative",
      "scale": { "zoom": true }
    },
    "y": {
      "field": "y",
      "type": "quantitative",
      "scale": { "domain": [-1.5, 1.5] }
    }
  }
}
