{
  "$schema": "https://unpkg.com/@genome-spy/core/dist/schema.json",

  "description": "ENCODE Candidate Cis-Regulatory Elements (cCREs) combined from all cell types, hg38",

  "params": [
    {
      "name": "url",
      "value": "http://hgdownload.soe.ucsc.edu/gbdb/hg38/encode3/ccre/encodeCcreCombined.bb",
      "bind": {
        "input": "radio",
        "options": [
          "http://hgdownload.soe.ucsc.edu/gbdb/hg38/encode3/ccre/encodeCcreCombined.bb",
          "http://xy.xy.xy/"
        ],
        "labels": ["Working URL", "Invalid URL"]
      }
    },
    {
      "name": "windowSize",
      "value": 1000000,
      "bind": {
        "input": "select",
        "options": [100000000, 10000000, 1000000, 100000]
      }
    },
    {
      "name": "debounce",
      "value": 200,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 3000,
        "step": 100
      }
    }
  ],

  "height": 30,

  "genome": {
    "name": "hg38"
  },

  "view": {
    "stroke": "lightgray"
  },

  "stops": { "expr": "[windowSize / max(width, 1)]" },

  "multiscale": [
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "text",
        "text": "Zoom in to see cCREs",
        "opacity": 0.6
      }
    },
    {
      "data": {
        "lazy": {
          "type": "bigbed",
          "url": { "expr": "url" },
          "windowSize": { "expr": "windowSize" },
          "debounce": { "expr": "debounce" }
        }
      },
      "transform": [],
      "encoding": {
        "x": {
          "chrom": "chrom",
          "pos": "chromStart",
          "type": "locus"
        },
        "x2": {
          "chrom": "chrom",
          "pos": "chromEnd"
        },
        "color": {
          "field": "ucscLabel",
          "type": "nominal",
          "scale": {
            "domain": ["prom", "enhP", "enhD", "K4m3", "CTCF"],
            "range": ["#FF0000", "#FFA700", "#FFCD00", "#FFAAAA", "#00B0F0"]
          }
        }
      },
      "mark": {
        "type": "rect",
        "minWidth": 0.5,
        "minOpacity": 0.4
      }
    }
  ]
}
