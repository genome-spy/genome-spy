{
  "$schema": "https://unpkg.com/@genome-spy/core/dist/schema.json",

  "genome": {
    "name": "hg38"
  },

  "title": {
    "text": "GC content",
    "style": "overlay"
  },

  "data": {
    "lazy": {
      "type": "bigwig",
      "url": "https://data.genomespy.app/genomes/hg38/hg38.gc5Base.bw",
      "pixelsPerBin": 1
    }
  },

  "transform": [
    {
      "type": "filter",
      "expr": "datum.score > 0"
    }
  ],

  "resolve": { "scale": { "x": "shared" } },

  "encoding": {
    "x": {
      "chrom": "chrom",
      "pos": "start",
      "type": "locus"
    },
    "x2": {
      "chrom": "chrom",
      "pos": "end"
    }
  },

  "vconcat": [
    {
      "height": 140,

      "view": {
        "stroke": "lightgray"
      },

      "encoding": {
        "x": {
          "chrom": "chrom",
          "pos": "start",
          "type": "locus",
          "axis": null
        },
        "y": {
          "field": "score",
          "type": "quantitative",
          "scale": {
            "nice": true,
            "zero": false
          },
          "axis": {
            "title": "GC (%)",
            "grid": true,
            "gridDash": [2, 2],
            "maxExtent": 35
          }
        }
      },
      "mark": {
        "type": "rect",
        "minWidth": 0.5,
        "minOpacity": 1,
        "tooltip": null
      }
    },
    {
      "height": 80,

      "view": {
        "stroke": "lightgray"
      },

      "encoding": {
        "color": {
          "field": "score",
          "type": "quantitative",
          "scale": {
            "zero": false
          }
        }
      },
      "mark": {
        "type": "rect",
        "minWidth": 0.5,
        "minOpacity": 1,
        "tooltip": null
      }
    }
  ]
}
