{
  "$schema": "https://unpkg.com/@genome-spy/core/dist/schema.json",

  "data": {
    "url": "../sincos.csv"
  },
  "encoding": {
    "x": {
      "field": "x",
      "type": "quantitative",
      "axis": {
        "orient": "top",
        "grid": true
      }
    },
    "y": {
      "field": "sin",
      "type": "quantitative"
    }
  },

  "columns": 1,

  "name": "root",

  "resolve": {
    "scale": { "x": "shared" },
    "axis": { "x": "shared" }
  },

  "concat": [
    {
      "columns": 1,

      "resolve": {
        "scale": { "x": "shared" },
        "axis": { "x": "shared" }
      },

      "concat": [
        {
          "view": { "stroke": "lightgray" },
          "mark": "point"
        },
        {
          "view": { "stroke": "lightgray" },
          "mark": "point",

          "encoding": {
            "y": {
              "field": "sin",
              "type": "quantitative",
              "axis": { "orient": "right" }
            }
          }
        }
      ]
    },
    {
      "view": { "stroke": "lightgray" },
      "mark": "point"
    }
  ]
}
