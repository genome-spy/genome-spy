{
  "$schema": "https://unpkg.com/@genome-spy/core/dist/schema.json",

  "description": "Testing vertical alignment and various fonts",

  "data": { "values": ["The quick brown fox jumps over the lazy dog. ACTG"] },

  "vconcat": [
    {
      "layer": [
        {
          "mark": {
            "type": "rule",
            "y": { "expr": "height / 2" },
            "color": "gray"
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "top",
            "clip": false,
            "font": "Lato",
            "fontWeight": 900,
            "y": { "expr": "height / 2" },
            "x": 0,
            "x2": { "expr": "width" },
            "size": 100
          },

          "encoding": {
            "text": { "field": "data" }
          }
        }
      ]
    },
    {
