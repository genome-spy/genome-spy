{
  "description": [
    "Using ordinal scale to map values to arbitrary positions on the positional channels",
    "This is mainly for GenomeSpy's internal use."
  ],

  "hconcat": [
    {
      "data": {
        "sequence": {
          "start": 0,
          "stop": 5,
          "step": 1,
          "as": "x"
        }
      },

      "mark": "point",

      "encoding": {
        "x": { "field": "x", "type": "quantitative" },
        "y": {
          "field": "x",
          "type": "nominal",
          "scale": {
            "type": "ordinal",
            "domain": [0, 1, 2, 3, 4],
            "range": [0.0, 0.05, 0.5, 0.95, 1.0]
          }
        }
      }
    },
    {
      "data": {
        "values": [
          { "y1": 0, "y2": 1 },
          { "y1": 2, "y2": 3 }
        ]
      },

      "mark": "rect",

      "encoding": {
        "y": {
          "field": "y1",
          "type": "nominal",
          "scale": {
            "type": "ordinal",
            "domain": [0, 1, 2, 3],
            "range": [0, 0.4, 0.6, 1.0]
          }
        },
        "y2": {
          "field": "y2"
        }
      }
    }
  ]
}
