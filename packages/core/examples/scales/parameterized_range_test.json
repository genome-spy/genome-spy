{
  "$schema": "https://unpkg.com/@genome-spy/core/dist/schema.json",

  "params": [
    {
      "name": "maxSize",
      "value": 1000,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000
      }
    }
  ],

  "data": {
    "sequence": {
      "start": 1,
      "stop": 8,
      "step": 1
    }
  },

  "mark": "point",

  "encoding": {
    "x": {
      "field": "data",
      "type": "ordinal"
    },
    "size": {
      "field": "data",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "range": [{ "expr": "0" }, { "expr": "maxSize" }]
      }
    }
  }
}
