{
  "$schema": "https://unpkg.com/@genome-spy/core/dist/schema.json",

  "params": [
    {
      "name": "pointSelection",
      "select": {
        "type": "point",
        "on": "mouseover"
      }
    }
  ],

  "data": {
    "values": [
      { "x": 1, "y": "How" },
      { "x": 2, "y": "are" },
      { "x": 3, "y": "you?" }
    ]
  },

  "transform": [{ "type": "identifier" }],

  "mark": {
    "type": "point",
    "size": 1600
  },

  "encoding": {
    "x": { "field": "x", "type": "ordinal" },
    "color": {
      "value": "gray",
      "condition": {
        "param": "pointSelection",
        "value": "#33f070"
      }
    }
  }
}
