{
  "data": {
    "sequence": { "start": 0, "stop": 10000 }
  },
  "transform": [
    {
      "type": "formula",
      "expr": "floor(random() * 10000)",
      "as": "x"
    },
    {
      "type": "formula",
      "expr": "floor(random() * 1000)",
      "as": "y"
    },
    {
      "type": "formula",
      "expr": "'' + datum.x + 'x' + datum.y",
      "as": "text"
    },
    {
      "type": "formula",
      "expr": "pow(40, random())",
      "as": "size"
    }
  ],
  "encoding": {
    "x": {
      "field": "x",
      "type": "quantitative"
    },
    "y": {
      "field": "y",
      "type": "quantitative"
    },
    "text": {
      "field": "text",
      "type": "ordinal"
    },
    "size": {
      "field": "size",
      "type": "quantitative",
      "scale": {
        "range": [5, 200]
      }
    },
    "opacity": {
      "field": "size",
      "type": "quantitative",
      "scale": {
        "range": [1, 0]
      }
    }
  },

  "mark": {
    "type": "text",
    "align": "center",
    "baseline": "middle"
  }
}
