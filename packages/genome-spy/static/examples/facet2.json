{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "padding": 30,
  "data": { "url": "data/cars.json" },
  "facet": {
    "row": { "field": "Origin" },
    "column": { "field": "Cylinders" }
  },
  "spec": {
    "mark": "point",
    "encoding": {
      "x": { "field": "Horsepower", "type": "quantitative" },
      "y": {
        "field": "Miles_per_Gallon",
        "type": "quantitative",
        "title": "MPG"
      },
      "color": { "field": "Origin", "type": "nominal" },
      "size": { "value": 50 },
      "opacity": { "value": 0.7 }
    }
  }
}
