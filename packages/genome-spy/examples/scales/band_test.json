{
  "data": {
    "values": ["A", "B", "C", "D", "E", "F", "G"]
  },
  "transform": [
    { "type": "formula", "expr": "random() * 100", "as": "a" },
    { "type": "formula", "expr": "datum.a + random() * 100", "as": "b" }
  ],
  "encoding": {
    "x": { "field": "a", "type": "quantitative" },
    "x2": { "field": "b" },
    "y": {
      "field": "data",
      "type": "nominal",
      "scale": {
        "padding": 0.3
      }
    }
  },
  "layer": [
    {
      "mark": "rect",
      "encoding": {
        "color": { "value": "#eaeaea" }
      }
    },
    {
      "mark": "point"
    }
  ]
}
