{
  "name": "root",
  "private": true,
  "type": "module",
  "engines": {
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@lerna-lite/cli": "^3.10.0",
    "@lerna-lite/publish": "^3.10.0",
    "@lerna-lite/run": "^3.10.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@storybook/addon-docs": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/web-components-vite": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dependency-cruiser": "^16.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.21.1",
    "husky": "^8.0.1",
    "jsdom": "^24.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "regenerator-runtime": "^0.13.9",
    "rollup": "^4.57.1",
    "rollup-plugin-glsl": "^1.3.0",
    "run": "^1.5.0",
    "sass": "^1.81.0",
    "ts-json-schema-generator": "^2.4.0",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vite-raw-plugin": "^1.0.2",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "build": "lerna run build",
    "build:docs:prepare": "npm -w @genome-spy/doc-embed run build && npm -w @genome-spy/core run build:schema && npm -w @genome-spy/app run build:schema && node scripts/prepare-docs-assets.mjs",
    "build:docs": "npm run build:docs:prepare && mkdocs build",
    "build:dependency-graph": "depcruise packages/core/src/index.js --include-only '^packages/core/src' --output-type dot | dot -T svg | depcruise-wrap-stream-in-html > core-dependency-graph.html",
    "lint": "eslint packages/*/src/",
    "test": "vitest run",
    "start": "npm -w @genome-spy/app run dev",
    "pretty-quick": "pretty-quick",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "publish": "lerna publish --changelog-include-commits-client-login \" by @%l\"",
    "preview:publish": "lerna publish --changelog-include-commits-client-login \" by @%l\" --dry-run"
  },
  "workspaces": [
    "./packages/*"
  ],
  "dependencies": {
    "@types/node": "^20.2.3"
  }
}
