{
  "name": "root",
  "private": true,
  "engines": {
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@rollup/plugin-replace": "^4.0.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.17.2",
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.1",
    "node-sass": "^7.0.1",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "regenerator-runtime": "^0.13.9",
    "rollup-plugin-glsl": "^1.3.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "sass": "^1.49.7",
    "ts-json-schema-generator": "^1.0.0",
    "typescript": "^5.0.4",
    "vite": "^5.0.0",
    "vite-raw-plugin": "^1.0.1",
    "vitest": "^0.34.6"
  },
  "scripts": {
    "build": "lerna run build",
    "build:docs": "mkdir -p docs/app && cp packages/doc-embed/dist/* docs/app/ && cp packages/core/dist/schema.json docs/ && mkdocs build",
    "lint": "eslint packages/*/src/",
    "test": "vitest run",
    "start": "npm -w @genome-spy/app run dev",
    "pretty-quick": "pretty-quick",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "version": "git rm package-lock.json && npm install && git add package-lock.json"
  },
  "workspaces": [
    "./packages/*"
  ],
  "dependencies": {
    "@types/node": "^20.2.3"
  }
}
