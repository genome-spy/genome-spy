{
  "name": "root",
  "private": true,
  "engines": {
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "express": "^4.17.2",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "node-sass": "^7.0.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "regenerator-runtime": "^0.13.9",
    "rollup-plugin-glsl": "^1.3.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "sass": "^1.49.7",
    "ts-json-schema-generator": "^0.97.1-next.0",
    "typescript": "^4.6.0-dev.20211122",
    "vite": "^2.8.0",
    "vite-raw-plugin": "^1.0.1",
    "vitest": "^0.8.4"
  },
  "scripts": {
    "build": "lerna run build",
    "build:docs": "mkdir -p docs/app && cp packages/doc-embed/dist/* docs/app/ && cp packages/core/dist/schema.json docs/ && mkdocs build",
    "lint": "eslint packages/*/src/",
    "test": "npm -w @genome-spy/core run test:vitest",
    "start": "npm -w @genome-spy/app run dev",
    "pretty-quick": "pretty-quick",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "version": "git rm package-lock.json && npm install && git add package-lock.json"
  },
  "workspaces": [
    "./packages/*"
  ]
}
